<!DOCTYPE html>
<html lang="en-US">
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="plantbook.css">
    <title>Krefting Plant Guide</title>
  </head>
  <body>
    <section class="frontcover">
      <h1>Krefting Plant Guide</h1>
    </section>
    <section class="chapter">
      <h2>All Identified Plants</h2>
      {% for p in plants %}
      <section class="plantrecord">
        <h3>{{p.scientific_name}} / {{p.common_name}}</h3>
        <dl>
          <dt>Plant Type</dt>
          <dd>{{p.plant_type}}</dd>
          <dt>Locations</dt>
          {% for l in p.locations %} 
          <dd>{{l}}</dd>
          {% endfor %}
          {% if p.errors|length > 0 %}
          <dt>Errors</dt>
          <dd>{{p.errors}}</dd>
          {% endif %}
        </dl>
        <ul>
          {% for photo in p.photos %}
          <li><img src="images/{{photo}}" alt="{{p.scientific_name}}"></li>
          {% endfor %}
        </ul>
      </section>
      {% endfor %}
    </section>

    <h2>Needs ID</h2>
    <ul>
      {% for r in unidentified_photos %}
      <li><img src="images/{{r.filename}}" alt="Unidentified plant photo"></li>
      {% endfor %}
    </ul>
  </body>
</html>
